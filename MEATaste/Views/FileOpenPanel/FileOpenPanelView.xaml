<UserControl
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:viewModels="clr-namespace:MEATaste.ViewModels"
         xmlns:fileOpenPanel="clr-namespace:MEATaste.Views.FileOpenPanel"
         x:Class="MEATaste.Views.FileOpenPanel.FileOpenPanelView"
         d:DataContext="{d:DesignInstance fileOpenPanel:FileOpenPanelController, IsDesignTimeCreatable=True}"
         mc:Ignorable="d" Height="28" Width="700">

    <Grid>
        <Button x:Name="OpenDialogButton" Content="Load H5 file..." HorizontalAlignment="Left" VerticalAlignment="Top"
                RenderTransformOrigin="0.508,-0.402" Margin="21,0,0,0" Height="26" Click="OpenDialogButton_Click" />
        <Label x:Name="FileVersionLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Content="{Binding FileVersionLabel, Mode = OneWay}"
               Visibility="Visible" Margin="101,0,0,0" Height="26" >
        </Label>
        <Label x:Name="FileNameLabel" HorizontalAlignment="Left" VerticalAlignment="Center" Content="{Binding FileNameLabel, Mode = OneWay}"
               Visibility="Visible" Margin="173,0,0,0" Height="26" >
        </Label>
    </Grid>

</UserControl>

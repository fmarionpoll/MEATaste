<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:MeaTaste"
        xmlns:Models="clr-namespace:MeaTaste.DataMEA.Models" x:Class="MeaTaste.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Width="1090" Height="500">

    <Grid x:Name="panelGrid" Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="84*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Button x:Name="OpenDialogButton" Content="Load H5 file..." HorizontalAlignment="Left" Height="27" Margin="10,0,0,0" VerticalAlignment="Center" Width="113" Click="OpenDialogButton_Click" RenderTransformOrigin="0.508,-0.402" Grid.Column="0"/>
        <Label x:Name="OpenedFileLabel"   HorizontalAlignment="Left" VerticalAlignment="Top" Content="filename" Visibility="Visible" Grid.Row="0" Grid.Column="1" Width="695" Height="26" Margin="10,0,0,0"/>
        <Label x:Name="OpenedFileVersion" HorizontalAlignment="Left" Margin="142,0,0,0" VerticalAlignment="Center" Content="fileversion" Visibility="Visible" Grid.Column="0" Height="26" Width="98"/>
        <WpfPlot x:Name="wpfPlot1" Margin="10,0,10,0" VerticalAlignment="Center" Grid.Row ="1"  Grid.Column="1" Height="207"/>
        <WpfPlot x:Name="wpfPlot2" Margin="10,0,10,0" VerticalAlignment="Center" Grid.Row ="2" Grid.Column="1" Height="208"/>
        <ListView x:Name="ListViewChannels" HorizontalAlignment="Left" Height="199" Margin="14,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="52" SelectionChanged="ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="channel"/>
                </GridView>
            </ListView.View>
        </ListView>
        <oxy:PlotView x:Name="CscanView" Grid.Row="2" Grid.Column="0"  Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      Background="AliceBlue" />
    </Grid>


</Window>

<UserControl x:Class="MEATaste.Views.PlotFiltered.PlotFilteredPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,0,0,0" Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WpfPlot x:Name="PlotControl" Grid.Row="1" Loaded="PlotControl_Loaded_1" AxesChanged="PlotControl_AxesChanged_1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <CheckBox Grid.Row="0" HorizontalAlignment="Left" Margin="10,0,0,0"
                  VerticalAlignment="Center" Click="CheckBox_Click"  >
            <TextBlock Text="Filter data buffer" VerticalAlignment="Center" />
        </CheckBox>
        <ComboBox Grid.Row="0" HorizontalAlignment="Left" Margin="140,0,0,0" VerticalAlignment="Center" Width="120" SelectedIndex="0" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Derivative BDeriv2f3" />
            <ComboBoxItem Content="Derivative BDerivFast2f3" />
            <ComboBoxItem Content="Running median" />
        </ComboBox>

    </Grid>
</UserControl>

<UserControl x:Class="MEATaste.Views.SwitchGrids.SwitchGridsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:grid1X1="clr-namespace:MEATaste.Views.PlotSignal"
             xmlns:grid3X3="clr-namespace:MEATaste.Views.Grid3x3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl x:Name="SwitchView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                   VerticalContentAlignment="Center" BorderBrush="{x:Null}"
                   TabStripPlacement="Bottom" >
            <TabItem Header="1x1">
                <Grid Background="#FFE5E5E5">
                    <grid1X1:PlotSignalPanel />
                </Grid>
            </TabItem>
            <TabItem Header="3x3">
                <Grid Background="#FFE5E5E5">
                    <grid3X3:Grid3X3 />
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>

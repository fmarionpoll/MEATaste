<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    x:Class="MEATaste.Views.FileOpen.FileOpenPanel"
    mc:Ignorable="d" Height="28" Width="700" Background="White">

    <Grid  Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="251"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="OpenDialogButton" Content="Load H5 file..." HorizontalAlignment="Left" VerticalAlignment="Center"
                Margin="20,0,0,0" Height="26" Click="OpenDialogButton_Click" Width="75" />

        <Label Grid.Column="0" x:Name="FileNameLabel" HorizontalAlignment="Stretch" VerticalAlignment="Center"
               Content="{Binding FileNameLabel, Mode = OneWay}"
               Visibility="Visible" Margin="110,0,10,0" Height="26" Grid.ColumnSpan="2" />
        <Button Content="Save current data file..."  Grid.Column="2" HorizontalAlignment="Left" Height="20" VerticalAlignment="Center" Width="131" Click="SaveCurrentClick"/>
        <Button Content="Save ALL data files..." Grid.Column="2" HorizontalAlignment="Left" Margin="140,0,0,0" VerticalAlignment="Center" Height="20" Width="102" Click="SaveAllClick"/>
    </Grid>

</UserControl>

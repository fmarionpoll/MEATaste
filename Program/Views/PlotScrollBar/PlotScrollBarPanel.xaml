<UserControl x:Class="MEATaste.Views.PlotScrollBar.PlotScrollBarPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MEATaste.Views.PlotScrollBar"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="800">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="233" />
            <ColumnDefinition />
            <ColumnDefinition Width="197" />
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Left" Margin="51,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Height="18" Grid.Column="0" Text="{Binding XFirst}" KeyUp="TextBox_KeyEnterUpdate"/>
        <Button Name="LeftLeft" Content="&lt;&lt;" HorizontalAlignment="Left" Margin="176,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.655,0.597" Height="20" Width="20"  Grid.Column="0" Click="LeftLeft_Click"/>
        <Button Name="Left"  Content="&lt;" HorizontalAlignment="Left" Margin="201,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="1.977,0.494" Height="20" Width="20"  Grid.Column="0" Click="Left_Click"/>

        <TextBox HorizontalAlignment="Left" Margin="67,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"  Height="20" Grid.Column="2" Text="{Binding XLast}" KeyUp="TextBox_KeyEnterUpdate"/>
        <Button Name ="Right"  Content="&gt;"   VerticalAlignment="Center" Height="20" Width="20" Grid.Column="2" Margin="15,0,162,0" RenderTransformOrigin="1.506,0.417" Click="Right_Click"/>
        <Button Name="RightRight" Content="&gt;&gt;"  VerticalAlignment="Center" Height="20" Width="20" Grid.Column="2" Margin="22,0,118,0" Click="RightRight_Click" />

        <ScrollBar Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Width="365" 
                   Orientation="Horizontal"
                   ViewportSize="{Binding SBViewPortSize}"
                   Maximum="{Binding SBMaximum}"
                   Minimum="{Binding SBMinimum}"
                   Value="{Binding SBValue}" 
                   Scroll="ScrollBar_Scroll" 
                   />

    </Grid>
</UserControl>
